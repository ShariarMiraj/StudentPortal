@{
}

@model List<StudentPortal.Web.Models.Entities.AttendanceTracking>

<h1>AttendanceTracking</h1>
<table class="table">
    <thead>
        <tr>
            <th>AttendanceID</th>
            <th>Session</th>
            <th>StudentID</th>
            <th>Timestamp</th>
            <th>LateArrivalTime</th>
            <th>  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var attendanceTracking in Model)
        {
            <tr>
                <td>@attendanceTracking.AttendanceID</td>
                <td>@attendanceTracking.Session</td>
                <td>@attendanceTracking.StudentID</td>
                <td>@attendanceTracking.Timestamp</td>
                <td>@attendanceTracking.LateArrivalTime</td>

                <td>
                    <a class="btn btn-primary" asp-controller="AttendanceTracking" asp-action="Edit" asp-route-id="@attendanceTracking.AttendanceID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
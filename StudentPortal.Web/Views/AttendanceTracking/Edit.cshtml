@model StudentPortal.Web.Models.Entities.AttendanceTracking

<h1> Edit AttendanceTracking</h1>

@if(Model is null)
{
    <p>Not founf any thoing </p>

}

else
{

    <form method="post">

        <div class="mt-3">
            <label class="form-label">AttendanceID</label>
            <input type="text" class="form-control" asp-for="AttendanceID" />
        </div>

        <div class="mt-3">
            <label class="form-label">Session</label>

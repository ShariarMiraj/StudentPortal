@{
}

@model List<StudentPortal.Web.Models.Entities.Course>

<h1>Course</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>CreatedDate</th>
            <th>Department</th>
            <th>EnrolledStudents </th>
            <th>   </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>@course.CreatedDate</td>
                <td>@course.Department</td>
                <td>@course.EnrolledStudents</td>
                <td>
                    <a class="btn btn-primary"  asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id">Edit</a>

                   </td>
            </tr>
            
        }
    </tbody>

</table>
@model StudentPortal.Web.Models.Entities.Fee


<h1> Edit Fee</h1>

@if (Model is  null)
{
    <p>No Fee is find</p>
}

else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">FeeId</label>
            <input type="text" class="form-control" asp-for="FeeId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">CourseID</label>
            <input type="text" class="form-control" asp-for="CourseID" />
        </div>

        <div class="mt-3">
            <label class="form-label"> FeeType</label>
            <input type="text" class="form-control" asp-for="FeeType" />
        </div>

        <div class="mt-3">
            <label class="form-label">Amount </label>
            <input type="text" class="form-control" asp-for="Amount" />
        </div>


        <div class="mt-3">
            <label class="form-label">LateFee</label>
            <input type="text" class="form-control" asp-for="LateFee" />
        </div>

        <div class="mt-3">
            <label class="form-label">PaymentDate </label>
            <input type="text" class="form-control" asp-for="PaymentDate" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Fee">Delete</button>
        </div>
    </form>

}


@{
}

@model StudentPortal.Web.Models.Entities.DiscussionForum




<h1> Edit DiscussionForum</h1>

@if (Model is null)
{
    <p>No DiscussionForum is found </p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">ForumID</label>
            <input type="text" class="form-control" asp-for="ForumID" />
        </div>

        <div class="mt-3">
            <label class="form-label">ForumName</label>
            <input type="text" class="form-control" asp-for="ForumName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>


        <div class="mt-3">
            <label class="form-label">DateTime</label>
            <input type="text" class="form-control" asp-for="DateTime" />
        </div>



        <div class="mt-3">
            <label class="form-label">Creator</label>
            <input type="text" class="form-control" asp-for="Creator" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="DiscussionForum">Delete</button>
        </div>
    </form>



}


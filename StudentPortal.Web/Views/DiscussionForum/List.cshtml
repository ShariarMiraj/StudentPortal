@{
}


@model List<StudentPortal.Web.Models.Entities.DiscussionForum>

<h1>DiscussionForum</h1>

<table class="table">
    <thead>
        <tr>
            <th>ForumID</th>
            <th>ForumName</th>
            <th>Description </th>
            <th>DateTime</th>
            <th>Creator</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var discussionForum in Model)
        {
            <tr>
                <td>@discussionForum.ForumID</td>
                <td>@discussionForum.ForumName</td>
                <td>@discussionForum.Description</td>
                <td>@discussionForum.DateTime</td>
                <td>@discussionForum.Creator</td>


                <td>
                    <a class="btn btn-primary" asp-controller="DiscussionForum" asp-action="Edit" asp-route-id="@discussionForum.ForumID">Edit</a>
                </td>

            </tr>
        }
    </tbody>
</table>